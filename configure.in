if test "$MPI_AINT_SIZE" != "unknown" ; then
    AC_MSG_CHECKING([for C integer type for MPI_Aint])
    AC_MSG_RESULT()
    # We'd like to use a loop here, but the pac GET_TYPE_SIZE
    # macro requires an autoconf-time constant
    PAC_GET_TYPE_SIZE(int,type_len)
    if test "$type_len" = "$MPI_AINT_SIZE" ; then
        MPI_AINT_FOUND=yes
        MPI_AINT=int
    fi
    if test "$MPI_AINT_FOUND" != yes ; then 
        PAC_GET_TYPE_SIZE(long,type_len)
        if test "$type_len" = "$MPI_AINT_SIZE" ; then
            MPI_AINT_FOUND=yes
            MPI_AINT=long
        fi
    fi
    if test "$MPI_AINT_FOUND" != yes ; then 
        PAC_GET_TYPE_SIZE(short,type_len)
        if test "$type_len" = "$MPI_AINT_SIZE" ; then
            MPI_AINT_FOUND=yes
            MPI_AINT=short
