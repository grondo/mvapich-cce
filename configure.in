    	eval "enable_${ac_feature}=no" 

	enable_args="$enable_args $arg"
	;;

     --file_system=* | --file_system=* )
        print_dep $arg "--with-romio=--with-file-system=value"
        FILE_SYSTEM="`echo $arg|sed 's/-*file_system=//'`"
       ;;

      -u | -usage | --usage | --usag | --usa | --us | --u | -help | --help )
	print_usage >& 2
	#
