    fi
    if test "$MPI_AINT_FOUND" != yes ; then 
        PAC_GET_TYPE_SIZE(long long,type_len)
        if test "$type_len" = "$MPI_AINT_SIZE" ; then
            MPI_AINT_FOUND=yes
            MPI_AINT="long long"
        fi
    fi
    AC_MSG(C integer type for MPI_Aint is)
    if test "$MPI_AINT_FOUND" = yes ; then 
        AC_MSG_RESULT($MPI_AINT)
